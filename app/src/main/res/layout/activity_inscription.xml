<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="application.facturia.Inscription"
    android:background="@drawable/inscrit">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="40dp"
    android:textAlignment="center"
    tools:layout_editor_absoluteY="0dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/titre_inscrit"
        android:textSize="40sp"
        android:textColor="@color/colorAccent"
        tools:layout_editor_absoluteX="72dp"
        tools:layout_editor_absoluteY="60dp" />

    <EditText
        android:id="@+id/zoneMail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Votre E-mail"
        android:inputType="textEmailAddress"
        android:textColor="@color/colorAccent"
        tools:layout_editor_absoluteX="85dp"
        tools:layout_editor_absoluteY="150dp" />

    <EditText
        android:id="@+id/zoneNom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Votre nom complet"
        android:inputType="text"
        tools:layout_editor_absoluteX="85dp"
        tools:layout_editor_absoluteY="206dp" />

    <EditText
        android:id="@+id/zonePass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Mot de passe"
        android:inputType="textPassword"
        tools:layout_editor_absoluteX="85dp"
        tools:layout_editor_absoluteY="261dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="108dp"
        android:layout_height="56dp"
        android:text="@string/confirmer_inscription"
        android:onClick="signupBtnEvent"
        tools:layout_editor_absoluteY="330dp"
        tools:layout_editor_absoluteX="138dp"
        />

</LinearLayout>


</android.support.constraint.ConstraintLayout>
